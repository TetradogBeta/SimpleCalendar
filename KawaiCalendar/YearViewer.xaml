<UserControl x:Class="KawaiCalendar.YearViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KawaiCalendar"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Height="250">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Viewbox>
            <TextBlock x:Name="tbYear"/>
        </Viewbox>
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" >
            <UniformGrid x:Name="ugItemsYear" Columns="4" Rows="3"/>
        </ScrollViewer>
    </Grid>
</UserControl>
