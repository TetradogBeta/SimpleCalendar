<UserControl x:Class="SimpleCalendar.CalendarioViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="3*"/>
			<RowDefinition Height="10*"/>
		</Grid.RowDefinitions>
		<Viewbox>
			<TextBlock x:Name="txtAñoActual"/>
		</Viewbox>
		<Viewbox Grid.Row="1">
			<TextBlock x:Name="txtMesActual" />
		</Viewbox>
		<UniformGrid x:Name="ugDiasMes" Grid.Row="2" Columns="7"/>
	</Grid>
</UserControl>